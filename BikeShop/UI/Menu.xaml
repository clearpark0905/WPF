<Page x:Class="BikeShop.UI.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop.UI"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Margin="50" Content="Products" Click="Products_Click" />
        <Button Grid.Row="0" Grid.Column="1" Margin="50" Content="Live support" Click="LiveSupport_Click" />
        <Button Grid.Row="0" Grid.Column="2" Margin="50" Content="Email support" Click="EmailSupport_Click"/>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Margin="50" FontSize="50" FontWeight="Bold" Text="Adventure Works"  HorizontalAlignment="Center"
                   FontStyle="Italic" FontFamily="Malgun Gothic" />
    </Grid>
</Page>
