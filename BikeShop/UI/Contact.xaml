<Page x:Class="BikeShop.Contact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="Contact">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="250*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Sender" Margin="10" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="" Margin="10"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Message" Margin="10" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="" Margin="10"/>
    </Grid>
</Page>
